<script>
    function changeColor(variable: string, fromColor: string, toColor: string) {
        document.documentElement.style.setProperty(variable, localStorage.getItem("theme") === "light" ? fromColor : toColor);
    }

    function changeTheme() {
        changeColor("--text-color", colors.black, colors.white);
        changeColor("--background-color", colors.white, colors.black);
        changeColor("--secondary-color", colors.grey, colors.darkGrey);

        localStorage.getItem("theme") === "light" ? bulb.classList.remove("dark-bulb") : bulb.classList.add("dark-bulb");
    }

    const colors = {
        black: "#25221E",
        white: "#FFFFFF",
        grey: "#E6E6E6",
        darkGrey: "#3B3835",
    };

    const bulb = document.getElementById("bulb") as HTMLElement;

    if (!localStorage.getItem("theme")) localStorage.setItem("theme", "light");

    changeTheme();

    document.body.style.transition = "all 250ms";
    bulb.style.transition = "fill 250ms";

    bulb.addEventListener("click", () => {
        localStorage.setItem("theme", localStorage.getItem("theme") === "light" ? "dark" : "light");

        changeTheme();
    });
</script>